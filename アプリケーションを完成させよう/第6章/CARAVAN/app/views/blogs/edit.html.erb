<h1>編集画面</h1>
<!-- form_for部分 -->
<%= form_for(@blog) do |f| %>
	<h4>タイトル</h4>
	<%= f.text_field :title %>
	<!-- ブロック変数"f"から取り出したtitleの投稿フォームを表示 -->
	<h4>カテゴリー</h4>
	<%= f.text_field :category %>
	<!-- ブロック変数"f"から取り出したcategoryの投稿フォームを表示 -->
	<h4>本文</h4>
	<%= f.text_area :body %>
	<!-- ブロック変数"f"から取り出したbodyの投稿フォームを表示(複数行) -->
	<%= f.submit '保存' %>
	<!-- 送信ボタンを"保存"の名前で作成 -->
<% end %>
