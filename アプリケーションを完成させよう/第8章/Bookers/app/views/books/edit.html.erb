<% if flash[:notice] %>
　<div>
	<%= flash[:notice] %>
　</div>
<% end %>
<h1>Editing Book</h1>
　　<% if @book.errors.any? %>
   	　<div class="alert alert-warning">
   		<ul>
   		　<%= @book.errors.full_messages.each do |message| %>
   		　　<li><%= message %></li>
   		　<% end %>
		</ul>
	　</div>
　　<% end %>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_field :body %>

	<%= f.submit 'Update Book' %>
<% end %>