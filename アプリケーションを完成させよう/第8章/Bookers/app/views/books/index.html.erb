<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
	　<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book %></td>
			<td><%= link_to "edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %>
			</td>
		</tr>
	　<% end %>
	</tbody>
</table>
<h2>New book</h2>
　<%= form_for(@book) do |f| %>
　　<% if @book.errors.any? %>
   	　<div class="alert alert-warning">
   		<ul>
   		　<%= @book.errors.full_messages.each do |message| %>
   		　　<li><%= message %></li>
   		　<% end %>
		</ul>
	　</div>
　　<% end %>
		<div class="form-group">
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</div>

		<div class="form-group">
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</div>

	<%= f.submit 'Create Book' %>

　<% end %>